{
	"name": "@oh-my-pi/pi-coding-agent",
	"version": "3.25.0",
	"description": "Coding agent CLI with read, bash, edit, write tools and session management",
	"type": "module",
	"ompConfig": {
		"name": "omp",
		"configDir": ".omp"
	},
	"bin": {
		"omp": "src/cli.ts"
	},
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./hooks": {
			"types": "./src/core/hooks/index.ts",
			"import": "./src/core/hooks/index.ts"
		}
	},
	"files": [
		"src",
		"docs",
		"examples",
		"CHANGELOG.md"
	],
	"scripts": {
		"check": "tsgo -p tsconfig.check.json",
		"clean": "rm -rf dist",
		"build": "tsgo -p tsconfig.build.json && chmod +x dist/cli.js",
		"build:binary": "bun build --compile ./src/cli.ts --outfile dist/omp",
		"generate-template": "bun scripts/generate-template.ts",
		"postinstall": "[ -f scripts/generate-template.ts ] && bun run generate-template || true",
		"test": "bun test",
		"prepublishOnly": "bun run generate-template && bun run clean && bun run build"
	},
	"dependencies": {
		"@mariozechner/pi-ai": "^0.37.4",
		"@oh-my-pi/pi-agent-core": "workspace:*",
		"@oh-my-pi/pi-git-tool": "workspace:*",
		"@oh-my-pi/pi-tui": "workspace:*",
		"@openai/agents": "^0.3.7",
		"@sinclair/typebox": "^0.34.46",
		"ajv": "^8.17.1",
		"chalk": "^5.5.0",
		"cli-highlight": "^2.1.11",
		"diff": "^8.0.2",
		"file-type": "^21.1.1",
		"glob": "^11.0.3",
		"highlight.js": "^11.11.1",
		"marked": "^15.0.12",
		"minimatch": "^10.1.1",
		"nanoid": "^5.1.6",
		"ndjson": "^2.0.0",
		"node-html-parser": "^6.1.13",
		"sharp": "^0.34.2",
		"smol-toml": "^1.6.0",
		"strip-ansi": "^7.1.2",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"yaml": "^2.8.2",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@types/diff": "^7.0.2",
		"@types/ms": "^2.1.0",
		"@types/ndjson": "^2.0.4",
		"@types/node": "^24.3.0",
		"ms": "^2.1.3"
	},
	"keywords": [
		"coding-agent",
		"ai",
		"llm",
		"cli",
		"tui",
		"agent"
	],
	"author": "Mario Zechner",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/can1357/oh-my-pi.git",
		"directory": "packages/coding-agent"
	},
	"engines": {
		"bun": ">=1.0.0"
	}
}
